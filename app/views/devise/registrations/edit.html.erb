<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

	<%= f.input :name, class: "form-group" %>
  <%= f.input :email, class: "form-group" %>
  <%= f.input :password, label: "New Password", autocomplete: "off", class: "form-group" %>
  <%= f.input :password_confirmation, label: "New Password Confirmation", autocomplete: "off", class: "form-group" %>
  <%= f.input :current_password, class: "form-group" %>
  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
